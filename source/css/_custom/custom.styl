// Custom styles.
.site-state {
  margin-top: 1em;
  font-size: 13px;
  .site-state-item {
    padding: 0 11px;
  }
}

.site-overview {
  text-align: center;
}

.post-body figure.highlight {
  margin: 10px -20px;
  padding: 0px 20px;
}

.posts-expand {
  padding-top: 0;
  .post-eof {
    width: 100%;
    height: 1px;
    background: $grey-light;
  }
}

.post-toc {
  a.nav-link {
    border-bottom: none;
  }
}

.site-author-name {
  font-weight: normal;
  font-size: 1.2em;
}

.nav-number {
  display: inline-block;
  text-align: right;
  width: 2em;
}
